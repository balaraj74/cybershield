# CyberShield AI - Backend Environment Template
# Copy to .env and configure

# Application
APP_NAME="CyberShield AI"
APP_VERSION="1.0.0"
DEBUG=true
DEMO_MODE=true

# Server
HOST=0.0.0.0
PORT=8001

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# Option 1: SQLite (Local Development)
# DATABASE_URL=sqlite+aiosqlite:///./cybershield.db

# Option 2: Supabase PostgreSQL (Production)
# Get your connection string from: Supabase Dashboard > Settings > Database > Connection string > URI
# Use the "Session mode" connection string with your password
DATABASE_URL=postgresql+asyncpg://postgres.[PROJECT-REF]:[YOUR-PASSWORD]@aws-0-[REGION].pooler.supabase.com:6543/postgres

# Supabase Project Settings (from Supabase Dashboard > Settings > API)
SUPABASE_URL=https://[PROJECT-REF].supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ===========================================
# SECURITY
# ===========================================

SECRET_KEY=cybershield-backend-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Key (for Next.js frontend to authenticate)
API_KEY=cybershield-api-key-2024

# ===========================================
# RATE LIMITING
# ===========================================

RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# ===========================================
# AI MODEL
# ===========================================

MODEL_CONFIDENCE_THRESHOLD=0.5
MAX_CONTENT_LENGTH=50000

# ===========================================
# PRIVACY
# ===========================================

RETENTION_DAYS=30
ANONYMIZE_DATA=true
